<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MuseMarket</title>
    @*@Styles.Render("~/Content/css")

        @Scripts.Render("~/bundles/modernizr")*@

    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")  <!-- Ensure Bootstrap is before custom.css -->
    <link href="~/Content/custom.css" rel="stylesheet" />

</head>
<body>
    <div class="page-wrapper">
        <nav class="navbar navbar-expand-sm custom-navbar">
            <div class="container">
                @*@Html.ActionLink("MuseMarket", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <div class="navbar-brand">
                    <img src="~/Images/logo2.png" alt="MuseMarket Logo" />
                </div>

                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse  ">
                    <ul class="navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link fix1" })</li>
                        <li>@Html.ActionLink("Gallery", "Index", "Gallery", new { area = "" }, new { @class = "nav-link fix1" })</li>
                        <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link fix1" })</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Artist"))
                            {
                                <li>@Html.ActionLink("My Gallery", "MyGallery", "Gallery", null, new { @class = "nav-link" })</li>
                            }
                            if (User.IsInRole("Customer"))
                            {
                                <li>@Html.ActionLink("My Cart", "Index", "Carts", null, new { @class = "nav-link" })</li>
                            }
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Artists", "Index", "Artists", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Customers", "Index", "Customers", new { area = "" }, new { @class = "nav-link" })</li>
                                <li>@Html.ActionLink("Paintings", "Index", "Paintings", new { area = "" }, new { @class = "nav-link" })</li>
                            }
                        }
                    </ul>
                    @*<div class="auth-links">
            @Html.Partial("_LoginPartial")
        </div>*@
                    <ul class=" auth-links">
                        <li class="nav-item">@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container body-content">
            @RenderBody()
        </div>
    </div> <!-- page-wrapper end -->

 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
